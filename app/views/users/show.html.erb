<h1 class="page_heading">User</h1>

<p>Name: <%= @user.name %></p>

<div class="event_feed">
  <div class="created_events_feed">
    <h4>Created Events</h4>
    <% @user.created_events.each do |event| %>
      <div class="event_container">
        <p><%= event.description %></p>
        <p><%= event.date %></p>
      </div>
    <% end %>
  </div>
  <div class="attended_events_feed">
    <h4>Attending Events</h4>
    <% @user.attended_events.each do |event| %>
      <div class="event_container">
        <p>Event name here</p>
        <p><%= event.date %></p>
      </div>
    <% end %>
  </div>
</div>

<nav class="bottom">
  <%= link_to "Home", root_path%>
  <%= link_to "Sign Out", logout_path, method: :delete %>
</nav>